<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.finbasics.controller.SubmitApplicationController"
            style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12; -fx-background-color: #f4f6f8;">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
            <Label text="New Application"
                   style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cancel" onAction="#cancel"
                    style="-fx-background-color:#e74c3c; -fx-text-fill:white; -fx-cursor:hand;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding:20;">

            <VBox spacing="10" prefWidth="220">
                <Label text="Workflow" style="-fx-font-size:14; -fx-font-weight:bold;"/>

                <HBox fx:id="step1Box" spacing="10" alignment="CENTER_LEFT">
                    <Label text="1" style="-fx-font-weight:bold; -fx-text-fill:#2980b9;"/>
                    <Label text="Borrower &amp; Product"/>
                </HBox>

                <HBox fx:id="step2Box" spacing="10" alignment="CENTER_LEFT">
                    <Label text="2" style="-fx-font-weight:bold; -fx-text-fill:#2980b9;"/>
                    <Label text="Applicant Details"/>
                </HBox>

                <HBox fx:id="step3Box" spacing="10" alignment="CENTER_LEFT">
                    <Label text="3" style="-fx-font-weight:bold; -fx-text-fill:#2980b9;"/>
                    <Label text="Documents"/>
                </HBox>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label fx:id="errorLabel" textFill="red"/>

                <VBox fx:id="viewStep1" spacing="15"
                      style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:8;">
                    <Label text="Step 1 — Borrower &amp; Product" style="-fx-font-size:14; -fx-font-weight:bold;"/>

                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label text="Borrower Type"/>
                            <HBox spacing="10">
                                <RadioButton fx:id="rbSme" text="SME"/>
                                <RadioButton fx:id="rbConsumer" text="Consumer"/>
                            </HBox>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Product"/>
                            <ComboBox fx:id="comboProduct" prefWidth="220"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Requested Amount"/>
                            <TextField fx:id="txtAmount" promptText="e.g. 150000"/>
                        </VBox>
                    </HBox>
                </VBox>

                <StackPane fx:id="viewStep2">
                    <VBox fx:id="formSme" spacing="10" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:8;">
                        <Label text="Step 2 — SME Applicant Details" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Business Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtBizName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="EIN" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtEin" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            <Label text="NAICS Code" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtNaics" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            <Label text="Date Established" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dpEstablished" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                            <Label text="Personal Guarantor" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtGuarantor" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        </GridPane>
                    </VBox>

                    <VBox fx:id="formConsumer" spacing="10" visible="false" managed="false"
                          style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:8;">
                        <Label text="Step 2 — Consumer Applicant Details" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Applicant Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtConsumerName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="SSN" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtSsn" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            <Label text="Employer" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtEmployer" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            <Label text="Annual Income" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtIncome" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="e.g. 85000"/>
                        </GridPane>
                    </VBox>
                </StackPane>

                <VBox fx:id="viewStep3" spacing="10" visible="false" managed="false"
                      style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:8;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Step 3 — Documents" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                        <Label text="(" style="-fx-text-fill:#7f8c8d;"/>
                        <Label fx:id="lblDocType" text="Pack" style="-fx-text-fill:#7f8c8d;"/>
                        <Label text=")" style="-fx-text-fill:#7f8c8d;"/>
                    </HBox>
                    <VBox fx:id="docListContainer" spacing="8"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="backBtn" text="← Back" onAction="#goBack"/>
                    <Button fx:id="nextBtn" text="Next →" onAction="#goNext"
                            style="-fx-background-color:#2980b9; -fx-text-fill:white; -fx-font-weight:bold;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>